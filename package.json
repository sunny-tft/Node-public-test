{
  "name": "node",
  "version": "1.0.0",
  "description": "basic test configuration for Nodejs restApi",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production && pm2 start server.js",
    "stop": "pm2 stop server && pm2 delete server",
    "dev": "NODE_ENV=dev nodemon server.js --silent",
    "log": "npm pm2 logs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "NODE_ENV=test jest --config ./jest.config.js --detectOpenHandles"
  },
  "author": "sunny",
  "license": "ISC",
  "dependencies": {
    "colors": "^1.4.0",
    "convict": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.11.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "chai": "^4.2.0",
    "eslint": "^7.15.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "mockingoose": "^2.13.2",
    "mongodb-memory-server": "^6.9.2",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1"
  }
}
